{
  "parser": "babel-eslint",
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "block-scoped-var": 0,
    "semi": [ 2, "never" ],
    "padded-blocks": 0,
    "max-len": 0,
    "no-console": 0,
    "func-names": 0
  },
  "plugins": [
    "react"
  ]
}
